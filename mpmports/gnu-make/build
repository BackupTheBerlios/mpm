set -e

cd "$SMPM_BUILDROOT/make-3.81"

if test "$_os" = "minix" ; then
    PATH=/bin:/usr/bin:/usr/X11R6/bin:/usr/local/bin
    export PATH

    CC="cc"
    LD="cc"
    CFLAGS="-D_MINIX=1 -D_POSIX_SOURCE=1"

    PREFIX="/usr/gnu"
else
    PREFIX="/usr"
fi

CC="$CC" LD="$LD" CFLAGS="$CFLAGS" sh \
configure --prefix="$PREFIX" \
          --disable-nls \
          --disable-dependency-tracking \

make

DESTDIR="$SMPM_INSTALLROOT" \
make DESTDIR="$SMPM_INSTALLROOT" install

exit 0
