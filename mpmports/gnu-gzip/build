set -e

cd "$SMPM_BUILDROOT/gzip-1.2.4a"

if test "$_os" = "minix" ; then
    PATH=/bin:/usr/bin:/usr/X11R6/bin:/usr/local/bin
    export PATH

    CC="cc"
    LD="cc"
    CFLAGS="-D_MINIX=1 -D_POSIX_SOURCE=1"

    PREFIX="$SMPM_INSTALLROOT/usr/gnu"
else
    PREFIX="$SMPM_INSTALLROOT/usr"
fi

CC="$CC" LD="$LD" CFLAGS="$CFLAGS" sh \
configure --prefix="$PREFIX" \

make
make install

exit 0
